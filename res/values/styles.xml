<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTheme" parent="Theme.Sherlock">
        <item name="android:listViewStyle">@style/listViewStyle</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>

    <style name="listViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="textViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/textAppearance</item>
    </style>

    <style name="textAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="finePrint">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="labelColumn" parent="@android:style/Widget.TextView">
        <item name="android:minWidth">100dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <!-- Dialog theme -->
    <style name="DialogTheme" parent="Theme.Sherlock.Dialog">
        <item name="android:listViewStyle">@style/listViewStyle</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>

    <!-- Green theme -->
    <style name="GreenTheme" parent="@style/DefaultTheme">
        <item name="android:windowBackground">@color/green_background</item>
        <item name="android:tileMode">repeat</item>
        <item name="android:textViewStyle">@style/greenTextViewStyle</item>
        <item name="android:tabWidgetStyle">@style/greenTabWidgetStyle</item>
    </style>

    <style name="greenTextViewStyle" parent="@style/textViewStyle">
        <item name="android:textAppearance">@style/greenTextAppearance</item>
    </style>

    <style name="greenTextAppearance" parent="@style/textAppearance">
        <item name="android:textColor">@color/light_yellow</item>
    </style>

    <style name="greenTabWidgetStyle" parent="@android:style/Widget.TabWidget">
        <item name="android:textColor">@color/yellow_black_tab_indicator_text</item>
    </style>

    <!-- Light theme -->
        <style name="LightTheme" parent="Theme.Sherlock.Light">
        <item name="android:listViewStyle">@style/listViewStyle</item>
        <item name="android:textViewStyle">@style/lightTextViewStyle</item>
        <item name="android:tabWidgetStyle">@style/lightTabWidgetStyle</item>
    </style>

    <style name="lightTextViewStyle" parent="@style/textViewStyle">
        <item name="android:textAppearance">@style/lightTextAppearance</item>
    </style>

    <style name="lightTextAppearance" parent="@style/textAppearance">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="lightTabWidgetStyle" parent="@android:style/Widget.TabWidget">
        <item name="android:textColor">@color/grey_black_tab_indicator_text</item>
    </style>

    <!-- Brown theme -->
    <style name="BrownTheme" parent="@style/GreenTheme">
        <item name="android:windowBackground">@color/brown_background_color</item>
    </style>
</resources>